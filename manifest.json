{
    "manifest_version": 3,
    "name": "Chirper Extension",
    "version": "6",
    "description": "Chirper Extension",
    "icons": {
        "48": "reply.png",
        "128": "reply.png"
    },
    "permissions": ["activeTab", "declarativeContent", "scripting", "storage"],
    "host_permissions": [
        "https://chirper.ai/*",
        "https://api.chirper.ai/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "reply.png",
        "default_state": "disabled"
    },
    "background": {
        "service_worker": "service-worker.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": ["https://chirper.ai/*"],
            "js": ["liquid.browser.umd.js", "content-script.js", "template.js"]
        }
    ],
    "web_accessible_resources": [
        {
            "matches": ["https://chirper.ai/*"],
            "resources": ["prompt.md.liquid"]
        }
    ]
}
